{
  "name": "@nuxion/browser-tool",
  "version": "1.4.2",
  "description": "CLI tool for browser automation and content extraction with Markdown support",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "browser-tool": "dist/index.js"
  },
  "files": [
    "dist",
    "examples",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/output.test.ts tests/extractor.test.ts",
    "test:integration": "vitest run tests/integration.test.ts tests/browser.test.ts",
    "link": "npm run build && npm link",
    "prepublishOnly": "npm run build && npm run test"
  },
  "keywords": [
    "browser",
    "scraper",
    "web-scraping",
    "playwright",
    "cli",
    "markdown",
    "html-to-markdown",
    "automation",
    "cdp",
    "chrome-devtools-protocol"
  ],
  "author": "Xavier Petit <nuxion@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nuxion/browser-tool.git"
  },
  "homepage": "https://github.com/nuxion/browser-tool#readme",
  "bugs": {
    "url": "https://github.com/nuxion/browser-tool/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "cheerio": "^1.0.0",
    "commander": "^12.1.0",
    "ora": "^8.0.1",
    "playwright": "^1.45.0",
    "turndown": "^7.2.2"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@types/turndown": "^5.0.6",
    "@vitest/coverage-v8": "^4.0.17",
    "tsx": "^4.15.0",
    "typescript": "^5.5.0",
    "vitest": "^4.0.17"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
